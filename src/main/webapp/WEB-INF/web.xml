<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Для примера !-->

    <servlet>
        <servlet-name>Main</servlet-name>
        <servlet-class>ru.melnikov.Intensive.task.webAPI.servlets.MainServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/start</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CurrentWeather</servlet-name>
        <servlet-class>ru.melnikov.Intensive.task.webAPI.servlets.GetCurrentWeatherByCityNameServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CurrentWeather</servlet-name>
        <url-pattern>/weather</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PrognosisWeather</servlet-name>
        <servlet-class>ru.melnikov.Intensive.task.webAPI.servlets.PrognosisFiveDayServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PrognosisWeather</servlet-name>
        <url-pattern>/prognosis</url-pattern>
    </servlet-mapping>


</web-app>